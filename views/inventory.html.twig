<html>
<head>
    <title>Inventory List</title>
</head>
<body>
    <h1>Inventory List</h1>

    {% if items is not empty %}
        <p>Here are all your items:</p>
        <ul>
            {% for item in items %}
                <li>{{ item.getName}}</li>
                <li>{{ item.getDescription }}</li>
                <li>{{ item.getValueAmount }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/items' method='post'>
        <label for='name'>Name of Item</label>
        <input id='name' name='name' type='text'>
        <label for='description'>Item Description</label>
        <input id='description' name='description' type='text'>
        <label for='value'>Value</label>
        <input id='value' name='value_amount' type='number'>
        <label for='currency'>Currency Type</label>
        <select class="currency_type" name="currency_type">
             <option value=1 >USD</option>
             <option value=2 >Euro</option>
             <option value=3 >PESOS</option>
        </select>
        <label for='type'>Type of Collectable</label>
        <select class="collectable_type" name="collectable_type">
             <option value=1 >Cards</option>
             <option value=2 >Ponies</option>
             <option value=3 >Action Figures</option>
        </select>

        <button type='submit'>Add task</button>
    </form>
    <form action='/delete_items' method='post'>
        <button type='submit'>Clear</button>
    </form>
</body>
</html>
